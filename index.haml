          (adsbygoogle = window.adsbygoogle || []).push({});


        .fb-comments{'data-href':'http://funbah.nl/','data-numposts':'50','data-colorscheme':'light'}
        :javascript
            function getRandomInt (min, max) {
                return Math.floor(Math.random() * (max - min + 1)) + min;
            }

            function loadImage(hash) {
                if (hash) {
                  hash = hash.substring(1, hash.length);
                } else {
                  hash = "0" + getRandomInt(10,42) + '/' + getRandomInt(100,500) + '/' + getRandomInt(100,800);
                }

                window.location.hash = hash
                $('#shareButton').data('href',document.location.href)
                
                src = "http://cloud.funda.nl/valentina_media/" + hash + "_grotere.jpg";


                $('#targetImage').attr("src", src);
                try {
                  ga('send', 'pageview');
                } catch(err) {}
            }

            $('#targetImage').error(function(){
                loadImage();
            });

            loadImage(window.location.hash)

